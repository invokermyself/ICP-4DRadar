<launch>

    <arg name="config" default="params_demo_dataset"/>
    
    <node name="radar_odometry" pkg="odometry_4dradar" type="radar_odometry" output="screen"> 
        <param name="bag_path" type="string" value="/home/invoker/data_our/2023-05-26-16-06-44.bag" />
        <param name="topic_imu" type="string" value="/ld_can" />
        <param name="topic_radar_scan" type="string" value="/radar_enhanced_pcl" />
        <param name="topic_lidar_gt" type="string" value="/lidar_ground_truth" />
        <param name="topic_gps_gt" type="string" value="/gps_fix" />
        <param name="sc_dist_thres" type="double" value="0.55"/> <!-- SC-A-LOAM, if want no outliers, use 0.1-0.15 -->
        <rosparam file="$(find odometry_4dradar)/config/$(arg config).yaml" command="load"/>
    </node>

    <!-- 在rviz中显示-->
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find odometry_4dradar)/rviz/radar.rviz" required="true" />

</launch>