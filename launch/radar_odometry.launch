<launch>

    <arg name="config" default="params_demo_dataset"/>

    <node name="radar_odometry" pkg="odometry_4dradar" type="radar_odometry" output="screen"> 
        <param name="bag_path" type="string" value="/media/invoker/7c55e174-1f14-4e90-beed-a4a0a04c709e/jihe_loop/fengshuominyuan/2023-06-05-16-43-19/" />
